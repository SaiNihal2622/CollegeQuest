</head>

<body>
    <div class="navbar">
        <a class="active" href="#hme">Home</a>
        <a href="#challenges">Challenges</a>
        <a href="#practice">Practice</a>
        <a href="#competitions">Competitions</a>
        <a href="#jobs">Jobs</a>
        <a href="#discussions">Discussions</a>
        <a href="#leaderboard">Leaderboard</a>
      </div>

    <h1>Colleges Table</h1>
    <p>Top 10 Colleges </p>

    <div class="colleges-container">
        <% let oddCount = 0; %>
        <% colleges.forEach((college, index) => { %>
        <% if (index % 2 !== 0 && oddCount < 10) { %>
        <div class="college">
            <h3><%= college.instname %></h3>
            <a href="<%= college.website %>" class="button-type" data-content="<%= college.branch %>">
                <%= college.branch %>
            </a>
        </div>
        <% oddCount++; %>
        <% } %>
        <% }); %>
    </div>
</body>

</html>
